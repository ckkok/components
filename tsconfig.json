{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "./dist/",
    "rootDir": "src",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "target": "ES5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES5", "ES6", "ES7", "ES2017", "ES2018", "ES2019", "ES2020"],
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.tsx"
  ]
}