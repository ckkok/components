{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "outDir": "./dist/",
    "rootDir": "src",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "target": "ES5"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.tsx"
  ]
}